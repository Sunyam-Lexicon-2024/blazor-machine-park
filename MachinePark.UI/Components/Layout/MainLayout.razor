@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudTooltip Text="Open Drawer" Delay="300" Duration="500"></MudTooltip>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@(() => ToggleDrawer())" />
        <h2>
            Machine Park Manager
        </h2>
    </MudAppBar>
    <MudDrawer @bind-Open="@DrawerOpen">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-5">
            @Body
        </MudContainer>
    </MudMainContent>
    <footer Class="fixed ma-2" Style="bottom: 0;">Design by <a href="https://github.com/suny-am">Suny-Am</a> - @year
    </footer>
</MudLayout>

@code {

    protected int year = DateTime.Today.Year;
    public bool DrawerOpen { get; set; } = false;

    private void ToggleDrawer()
    {
        DrawerOpen = !DrawerOpen;
    }
}