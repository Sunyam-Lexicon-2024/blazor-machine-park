@using System.Net.Http
@using System.Text.Json

<MudContainer Class="d-flex" MaxWidth="MaxWidth.ExtraExtraLarge">
    <MachineStatsDisplay ref="@_statsDisplay" />
    <MachineDataGrid DataUpdated="@(() => OnDataUpdated())" />
</MudContainer>

@code {

    protected MachineStatsDisplay? _statsDisplay;

    private async Task OnDataUpdated()
    {
        await _statsDisplay!.FetchData();
    }
}